<Page x:Class="Board.pageSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Board"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="frameSettings">

    <Grid>
        <Rectangle RadiusX="20" RadiusY="20" Fill="White" Stroke="DodgerBlue">

        </Rectangle>
        <StackPanel Margin="20" HorizontalAlignment="Left">
            <CheckBox x:Name="chkStartupRecord" Content="Start Clipboard Capturing on Startup" Margin="5"/>
            <TextBox x:Name="tbClipboardHistLimit"/>
        </StackPanel>       
    </Grid>
</Page>
